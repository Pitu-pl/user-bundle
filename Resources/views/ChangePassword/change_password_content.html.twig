<div class="row admin-container">
    <div class="col-md-4 col-md-offset-4">
        <div class="change-password">
            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="{{ type }} flash-alert">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password change-password__form" novalidate>
                {{ form_widget(form) }}
                <div>
                    <input type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-small btn-primary btn-block">
                </div>
            </form>
        </div>
    </div>
</div>
